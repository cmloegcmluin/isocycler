{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "downlevelIteration": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "pretty": true,
    "esModuleInterop": true,
    "outDir": "dist/package",
    "declaration": true,
    "removeComments": true
  },
  "include": [
    "src"
  ]
}
